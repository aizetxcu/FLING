-- Создаем ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.CoreGui

-- Создаем фрейм для сообщения
local messageFrame = Instance.new("Frame")
messageFrame.Parent = screenGui
messageFrame.Size = UDim2.new(0.5, 0, 0.5, 0) -- Размер половины экрана
messageFrame.Position = UDim2.new(0.25, 0, 0.25, 0) -- Центрируем по середине экрана
messageFrame.BackgroundColor3 = Color3.new(0, 0, 0) -- Черный цвет фона
messageFrame.BackgroundTransparency = 0.5 -- Полупрозрачный фон
messageFrame.BorderSizePixel = 0

-- Создаем текстовый элемент для надписи "xuizware loader"
local loaderText = Instance.new("TextLabel")
loaderText.Parent = messageFrame
loaderText.Size = UDim2.new(1, 0, 0.1, 0) -- Размер надписи (10% от высоты фрейма)
loaderText.Position = UDim2.new(0, 0, 0, 0) -- Верхний левый угол
loaderText.Text = "xuizware loader"
loaderText.TextSize = 30
loaderText.Font = Enum.Font.GothamBold -- Жирный шрифт
loaderText.TextColor3 = Color3.new(1, 1, 1) -- Белый цвет текста
loaderText.BackgroundTransparency = 1 -- Прозрачный фон
loaderText.TextStrokeTransparency = 0 -- Нет прозрачности для обводки текста
loaderText.TextStrokeColor3 = Color3.new(1, 0, 0) -- Красная обводка
loaderText.TextScaled = true -- Масштабируемый текст

-- Создаем текстовый элемент для сообщения
local textLabel = Instance.new("TextLabel")
textLabel.Parent = messageFrame
textLabel.Size = UDim2.new(1, 0, 0.8, 0) -- Занимает всю площадь фрейма, кроме надписи
textLabel.Position = UDim2.new(0, 0, 0.1, 0) -- Отступ от верха для надписи
textLabel.Text = "not working now"
textLabel.TextSize = 24
textLabel.TextColor3 = Color3.new(1, 0, 0) -- Красный цвет текста
textLabel.BackgroundTransparency = 1 -- Прозрачный фон
textLabel.TextWrapped = true -- Переносит текст на новую строку при необходимости

-- Создаем кнопку "Закрыть"
local closeButton = Instance.new("TextButton")
closeButton.Parent = messageFrame
closeButton.Size = UDim2.new(0.1, 0, 0.1, 0) -- Размер кнопки
closeButton.Position = UDim2.new(0.9, 0, 0, 0) -- Правый верхний угол
closeButton.Text = "Close"
closeButton.TextSize = 18
closeButton.TextColor3 = Color3.new(1, 1, 1) -- Белый цвет текста
closeButton.BackgroundColor3 = Color3.new(0, 0, 0) -- Черный цвет фона
closeButton.BackgroundTransparency = 0.5 -- Полупрозрачный фон
closeButton.BorderSizePixel = 0

-- Функция для закрытия сообщения
local function closeMessage()
    screenGui:Destroy()
end

-- Привязываем функцию к кнопке "Закрыть"
closeButton.MouseButton1Click:Connect(closeMessage)



print("it still developing so lol")
